<div class="row">
<h3>Listas</h3>
  {{#each lista}}
    <div class="col-md-3">      
      <div class="card border-light mb-3">
        <div class="card-body">
          <h4 class="card-title d-flex justify-content-between align-items-center">
            {{titleList}}  
          </h4>
          <p>{{moment fechaCreacion format="DD/MM/YYYY"}}</p>
          <p>{{moment fechaResolucion format="DD/MM/YYYY"}}</p>
          <p>{{estado}}</p>
          <p>{{idCategoria}}</p>
          <!--Eliminar-->
          <form action="/tasks/deleteLista" method="POST">

          <a class="btn btn-outline-info btn-block btn-sm" href="/listitem/{{id_lista}}">Items</a>

            <input type="hidden" value="{{id_lista}}" name="id_lista" />
            <button class="btn btn-outline-danger btn-block btn-sm" type="submit">
              Eliminar
            </button>
          </form>
        </div>
      </div>
    </div>
    {{else}}
    <!--Crear nueva Lista-->
    <div class="col-md-4 mx-auto">
      <div class="card text-center">
        <div class="card-body">

          <p class="lead">No hay Listas</p>
          <a href="/createLista" class="btn btn-success btn-block">Crear Lista</a>
        </div>
      </div>
    </div>
  {{/each}}
</div>