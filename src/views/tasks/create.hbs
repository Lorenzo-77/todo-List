<div class="col-md-4 mx-auto ">
    <div class="card text-center border-primary mb-3">
    <div class="card-header">
        <h3>Crear Item</h3>
    </div>
    <div class="card-body ">
        <form action="" method="post">

        <div class="input-group mb-3">
            <input type="text"  name="titulo" class="form-control" placeholder="Titulo" autofocus>
        </div>

       <!--  -->
        <div class="input-group mb-3">
            <textarea class="form-control" name="descripcion" placeholder="DescripciÃ³n"></textarea>
        </div>
         <div class="input-group mb-3">
          <select name="prioridad" class="form-select" aria-label="Default select example" >
              <option class="form-control">Baja</option>
              <option class="form-control">Media</option>
              <option class="form-control">Alta</option>
          </select>
        </div> 

         <div class="input-group mb-3">
            <input type="text" class="form-control" placeholder="Fecha Limite" disabled>
            <input type="date"  name="fechaLimite" min="{{moment format="YYYY-MM-DD"}}" 
            value="{{moment format="YYYY-MM-DD"}}" class="form-control">
        </div>
        <input type="hidden"  name="estado" value="Sin resolver">
        <div class="form-group">
            <button class="btn btn-primary btn-block" type="submit">
                Guardar
            </button>
        </div>
        </form>
    </div>
</div>
