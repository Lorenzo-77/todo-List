<div class="col-md-4 mx-auto">
    <div class="card text-center">
    <div class="card-header">
        <h3>Agregar a Lista</h3>
    </div>
    <div class="card-body">
  {{#each item }}
        <form action="" method="post"> 
        <div class="input-group mb-3">
            <input type="text"  name="titulo" class="form-control" value="{{titulo}}" disabled>
        </div>
         <div class="input-group mb-3">
          <select name="id_lista" class="form-select" aria-label="Default select example" >
            {{#each ../lista}}
            <option class="form-control" value={{id_lista}}> {{titleList}}</option>
            {{/each}}
          </select>
        </div> 
        <div class="form-group">
            <button class="btn btn-primary btn-block" type="submit">
                Guardar
            </button>
        </div>
        </form>
  {{/each}}
   </div>
</div>
</div>