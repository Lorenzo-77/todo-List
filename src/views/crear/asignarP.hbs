<div class="col-md-4 mx-auto">
    <div class="card text-center">
    <div class="card-header">
        <h3>Gestion de Materias</h3>
    </div>
    <div class="card-body">
        <form action="" method="post"> 
        <div class="input-group mb-3">
         <select name="profeCargo" class="form-select" aria-label="Default select example" >
            {{#each profesores}}
              <option class="form-control" value={{idProfe}}> {{nombre}}</option>
            {{/each}}
          </select>
        </div>
         <div class="input-group mb-3">
          <select name="idMateria" class="form-select" aria-label="Default select example" >
            {{#each materias}}
            <option class="form-control" value={{idMateria}}> {{nombreMateria}}</option>
            {{/each}}
          </select>
        </div> 
        <div class="form-group">
            <button class="btn btn-primary btn-block" type="submit">
                Guardar
            </button>
        </div>
        </form>

   </div>
</div>
</div>
